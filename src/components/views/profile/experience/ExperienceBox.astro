---
const { dates, company, position } = Astro.props;
---

<div class="flex flex-row gap-x-2">
  <div class="flex flex-col items-center gap-y-0.5">
    <div class="w-2 h-2 rounded-full bg-black"></div>
    <div class="w-0.5 flex-1 bg-black"></div>
  </div>
  <div class="flex flex-col">
    <p class="text-xs font-semibold font-poppins">
      {dates}, {company}:
    </p>
    <p class="text-xs font-poppins text-gray-600">{position}</p>
  </div>
</div>
