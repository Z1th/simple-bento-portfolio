---
import { Icon } from "astro-icon/components";
const { nameIcon, href } = Astro.props;
---

  <div class="flex">
    <a
      href={href}
      target="_BLANK"
      class="w-8 h-8 flex items-center justify-center rounded-full opacity-70 transition-opacity duration-300 bg-gray-200 hover:opacity-100"
    >
      <Icon name={nameIcon} class="w-5 h-5 text-white" />
    </a>
  </div>